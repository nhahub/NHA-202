<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="CrossBrowserSuite" parallel="tests" thread-count="2">

<!--    Cross Browser Execution for LoginTest from both Chrome and Edge-->
    <test name="LoginTestChromeTest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="POMpatternTests.LoginTest"/>
        </classes>
    </test>
    <test name="LoginTestEdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="POMpatternTests.LoginTest"/>
        </classes>
    </test>


